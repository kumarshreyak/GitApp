<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:focusable="true"
        android:clickable="true"
        android:paddingBottom="8dp"
        android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_user"
            android:scaleType="fitCenter"
            android:background="@color/color_text_light_high"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_width="36dp"
            android:layout_height="36dp"/>
        <TextView
            android:id="@+id/tv_user"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="@color/color_text_dark_medium"
            android:text="Shreyak"
            app:layout_constraintStart_toEndOf="@+id/iv_user"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_repo"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_repo"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:textColor="@color/color_text_dark_high"
            android:text="Shreyak"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toEndOf="@+id/iv_user"
            app:layout_constraintTop_toBottomOf="@id/tv_user"
            app:layout_constraintBottom_toTopOf="@id/tv_description"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_description"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="@color/color_text_dark_medium"
            android:text="desccccription"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toEndOf="@+id/iv_user"
            app:layout_constraintTop_toBottomOf="@id/tv_repo"
            app:layout_constraintBottom_toTopOf="@id/iv_lang"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_lang"
            android:background="@color/color_text_dark_medium"
            app:layout_constraintTop_toBottomOf="@id/tv_description"
            app:layout_constraintStart_toStartOf="@id/tv_description"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_width="16dp"
            android:layout_height="16dp"/>

        <TextView
            android:id="@+id/tv_lang"
            android:text="C++"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="@color/color_text_dark_medium"
            app:layout_constraintTop_toTopOf="@id/iv_lang"
            app:layout_constraintStart_toEndOf="@id/iv_lang"
            app:layout_constraintBottom_toBottomOf="@id/iv_lang"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_stars"
            android:src="@drawable/ic_star_black"
            app:layout_constraintTop_toTopOf="@id/iv_lang"
            app:layout_constraintStart_toEndOf="@id/tv_lang"
            app:layout_constraintBottom_toBottomOf="@id/iv_lang"
            android:layout_marginStart="16dp"
            android:layout_width="16dp"
            android:layout_height="16dp"/>

        <TextView
            android:id="@+id/tv_stars"
            android:text="C++"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="@color/color_text_dark_medium"
            app:layout_constraintTop_toTopOf="@id/iv_lang"
            app:layout_constraintStart_toEndOf="@id/iv_stars"
            app:layout_constraintBottom_toBottomOf="@id/iv_lang"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_fork"
            android:background="@color/color_text_dark_medium"
            app:layout_constraintTop_toTopOf="@id/iv_lang"
            app:layout_constraintStart_toEndOf="@id/tv_stars"
            app:layout_constraintBottom_toBottomOf="@id/iv_lang"
            android:layout_marginStart="16dp"
            android:layout_width="16dp"
            android:layout_height="16dp"/>

        <TextView
            android:id="@+id/tv_fork"
            android:text="C++"
            style="@style/TextAppearance.MaterialComponents.Caption"
            android:textColor="@color/color_text_dark_medium"
            app:layout_constraintTop_toTopOf="@id/iv_lang"
            app:layout_constraintStart_toEndOf="@id/iv_fork"
            app:layout_constraintBottom_toBottomOf="@id/iv_lang"
            android:layout_marginStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/expanded_group"
            android:visibility="visible"
            app:constraint_referenced_ids="tv_description,iv_fork,iv_lang,iv_stars,tv_fork,tv_lang,tv_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:background="@color/color_text_dark_low"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>